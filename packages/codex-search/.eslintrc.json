{
	"overrides": [
		{
			"files": [ "**/*.ts", "**/*.js" ],
			"excludedFiles": "src/**",
			"extends": [
				"wikimedia/server"
			],
			"rules": {
				"strict": "off",
				"node/no-missing-import": [ "error", {
					"tryExtensions": [ ".js", ".ts" ]
				} ]
			}
		},
		{
			"files": [ "**/*.ts" ],
			"rules": {
				"no-unused-vars": "off",
				"@typescript-eslint/no-unused-vars": "error"
			}
		},
		{
			"files": [ "**/*.js" ],
			"excludedFiles": "src/**",
			"rules": {
				"jsdoc/valid-types": "off"
			}
		},
		{
			"files": [ "*.mjs" ],
			"parserOptions": {
				"sourceType": "module"
			},
			"rules": {
				"no-underscore-dangle": "off"
			},
			"env": {
				"node": true
			}
		}
	]
}

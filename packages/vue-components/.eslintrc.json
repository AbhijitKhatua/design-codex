{
	"overrides": [
		{
			"files": [ "src/**" ],
			"extends": [
				"wikimedia/client-es6"
			],
			"rules": {
				"vue/no-unsupported-features": [ "error", {
					"version": "^3.2.19"
				} ]
			}
		},
		{
			"files": [ "**/*.ts", "**/*.js" ],
			"excludedFiles": "src/**",
			"extends": [
				"wikimedia/server"
			],
			"rules": {
				"strict": "off"
			}
		},
		{
			"files": [ "**/*.ts", "**/*.vue" ],
			"rules": {
				"no-unused-vars": "off",
				"@typescript-eslint/no-unused-vars": "error"
			}
		}
	],
	"ignorePatterns": [
		"src/env.d.ts"
	]
}

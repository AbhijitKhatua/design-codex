{
	"rootDir": "..",
	"transform": {
		".+\\.ts$": "ts-jest",
		"src/svgs/.+\\.svg$": "<rootDir>/.jest/svgTransform.js"
	},
	"testEnvironment": "jsdom",
	"collectCoverage": true,
	"coverageThreshold": {
		"global": {
			"branches": 80,
			"functions": 80,
			"lines": 80
		}
	},
	"collectCoverageFrom": [
		"<rootDir>/src/**/*.ts",
		"!<rootDir>/src/**/*.d.ts",
		"!<rootDir>/src/index.ts",
		"!<rootDir>/src/icons.ts",
		"!<rootDir>/src/types.ts",
		"!<rootDir>/src/svgs/**"
	],
	"coverageDirectory": "<rootDir>/coverage",
	"errorOnDeprecated": true
}

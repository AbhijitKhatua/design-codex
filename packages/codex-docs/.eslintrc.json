{
	"overrides": [
		{
			"files": [ "**/*.ts", "**/*.js" ],
			"extends": [
				"wikimedia/server"
			],
			"rules": {
				"strict": "off",
				"node/no-missing-import": [ "error", {
					"tryExtensions": [ ".js", ".ts" ]
				} ]
			}
		},
		{
			"files": [ "**/*.ts", "**/*.vue" ],
			"rules": {
				"no-unused-vars": "off",
				"@typescript-eslint/no-unused-vars": "error",
				"jsdoc/require-param-type": "off",
				"jsdoc/require-returns-type": "off"
			}
		},
		{
			"files": [ "**/*.js" ],
			"rules": {
				"jsdoc/valid-types": "off",
				"jsdoc/no-undefined-types": "off"
			}
		}
	],
	"ignorePatterns": [
		"src/env.d.ts"
	]
}

{
	"overrides": [
		{
			"files": [ "**/*.ts", "**/*.js" ],
			"extends": [
				"wikimedia/server",
				"wikimedia/language/es2020"
			],
			"rules": {
				"strict": "off",
				"node/no-missing-import": [ "error", {
					"tryExtensions": [ ".js", ".ts" ]
				} ]
			}
		},
		{
			"files": [ "**/*.ts", "**/*.vue" ],
			"rules": {
				"no-unused-vars": "off",
				"@typescript-eslint/no-unused-vars": "error",
				"es-x/no-optional-chaining": "off",
				"es-x/no-rest-spread-properties": "off",
				"es-x/no-nullish-coalescing-operators": "off",
				"es-x/no-async-functions": "off",
				"es-x/no-class-fields": "off",
				"es-x/no-array-prototype-flat": "off",
				"jsdoc/require-param-type": "off",
				"jsdoc/require-returns-type": "off"
			}
		},
		{
			"files": [ "**/*.js" ],
			"rules": {
				"jsdoc/valid-types": "off",
				"jsdoc/no-undefined-types": "off"
			}
		},
		{
			"files": [ "*.mjs" ],
			"parserOptions": {
				"sourceType": "module"
			},
			"rules": {
				"no-underscore-dangle": "off"
			},
			"env": {
				"node": true
			}
		},
		{
			"files": [
				"component-demos/**/examples/*.vue",
				"component-demos/**/examples-mw/*.vue"
			],
			"extends": [
				"wikimedia/language/es6"
			],
			"rules": {
				"vue/block-lang": [ "error", {
					"script": { "lang": "js" }
				} ],
				"es-x/no-array-prototype-includes": "off"
			}
		},
		{
			"files": [ "component-demos/**/examples-mw/*.vue" ],
			"globals": {
				"require": "readonly",
				"module": "readonly"
			},
			"rules": {
				"vue/html-self-closing": [ "error", {
					"html": {
						"void": "never",
						"normal": "never",
						"component": "never"
					}
				} ],
				"vue/no-unused-properties": "off",
				"max-len": "off"
			}
		}
	],
	"ignorePatterns": [
		"src/env.d.ts",
		"dist/*",
		"docs/.vitepress/cache/**/*"
	]
}

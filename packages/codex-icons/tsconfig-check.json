{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"emitDeclarationOnly": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.mjs",
		"tests/**/*.ts",
		".jest/**/*.js",
		"./*.js",
		"./.*.js",
		"./*.mjs",
		"./*.ts",
		"./*.d.ts",
		"build/**/*.js"
	]
}

{
	"compilerOptions": {
		"target": "es2015",
		"useDefineForClassFields": true,
		"module": "es2015",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"lib": [ "esnext", "dom" ],
		"types": [ "jest" ]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		"build/**/*.ts",
		".jest/*.js",
		"./*.ts",
		"./*.js"
	],
	"exclude": [ "src/**/*.snap.ts" ]
}
